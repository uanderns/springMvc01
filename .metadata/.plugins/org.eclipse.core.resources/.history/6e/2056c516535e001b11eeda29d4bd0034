package br.com.cotiinformatica.controller;

import java.io.IOException;

import javax.servlet.http.HttpServletResponse;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class HomeController {

	//método para definir uma rota dentro do projeto
		//ROTA -> caminho para acesso a páginas
		@RequestMapping("/") //página inicial do projeto
		public String home() {
			
			return "home"; //nome da página que será aberta
			//WEB-INF/views/home.jsp
			
			/*
			 * Esta página deverá estar dentro de: '/WEB-INF/views/'
			 * Esta página deverá ter a extensão '.jsp'
			 */
	}
}
